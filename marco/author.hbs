{{> head}}
<hr class="article__spacer">
<main class="main--author">
    {{#author}}
        {{#if avatar}}
            <article class="author--avatar">
                <img src="{{avatar}}" class="author__avatar" alt="{{name}}">
            </article>
        {{/if}}
        {{!-- <h1 class="page-header__title">
                {{name}}
                <sup>({{postsNumber}} {{ translate "listing.post" (math postsNumber '+' 0)}})</sup>
            </h1>--}}
        {{#if description}}
            <article class="author-desc">
                <p>
                    {{description}}
                </p>
            </article>

        {{/if}}
    {{/author}}
    {{!-- {{#each posts}}
        <article class="article">
            {{#featuredImage}}
                {{#if url}}
                    <a href="{{../url}}">
                        <img src="{{url}}" sizes="{{sizes.listing}}" srcset="{{srcset.listing}}" alt="{{alt}}">
                    </a>
                {{/if}}
            {{/featuredImage}}

            <header>
                <h2 class="article__title">
                    <a href="{{url}}">{{title}}</a>
                </h2>
                {{#if hasCustomExcerpt}}
                    {{{ excerpt }}}
                {{else}}
                    <p>{{{ excerpt }}}</p>
                {{/if}}

                <p class="article__meta u-small">
                    {{#author}}
                        <a href="{{url}}" title="{{name}}">
                            {{#if avatar}}
                                <img src="{{avatar}}" class="article__meta__avatar" alt="{{name}}">
                            {{/if}}
                            {{name}}
                        </a>
                    {{/author}}

                    <time datetime="{{date createdAt 'YYYY-MM-DDTHH:mm'}}">
                        {{#checkIf @config.custom.formatDate '!=' 'custom'}}
                            {{date createdAt @config.custom.formatDate}}
    {{else}}
        {{date createdAt @config.custom.formatDateCustom}}
                        {{/checkIf}}
                    </time>
                </p>

            </header>
        </article>
    {{/each}} --}}

    {{> pagination}}
</main>
{{> footer}}
